<Window x:Class="WpfHomeBudget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHomeBudget"
        mc:Ignorable="d"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation= "CenterScreen"
        Title="BudgetApplication" Width="692" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--Menu: row 0-->
        <Menu Grid.ColumnSpan="5">
            <MenuItem Header="_Option" />
            <MenuItem Header="_Option">
                <MenuItem Header="_Option" />
                <MenuItem Header="_Option" />
            </MenuItem>
            <MenuItem Header="_Settings" />
        </Menu>

        <!--Buffer Zone: row 1-->
        <!-- View Title: row 2 -->
        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="14">Expenses</TextBlock>

        <!--Buffer Zone: row 3-->
        <!--Medicine Data: row 4-->
        <DataGrid Grid.Row="4" Grid.ColumnSpan="5" AutoGenerateColumns="False" IsReadOnly="True" Margin="16,6,16,6" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" />
                <DataGridTextColumn Header="Date"/>
                <DataGridTextColumn Header="Description"/>
                <DataGridTextColumn Header="Amount"/>
                <DataGridTextColumn Header="Category"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--Buffer Zone: row 5-->
        <!-- Total: row 6 -->
        <TextBlock  Grid.Row="6" Grid.Column="1">Total</TextBlock>
        <Border Grid.Row="6" Grid.Column="3" BorderThickness="2" BorderBrush="Black">
            <TextBlock  Background="#FFD8D7D7"></TextBlock>
        </Border>

        <!-- Buffer Zone: row 7-->
        <!--Modification tools: row 8-->
        <Grid Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--Search bar: column 0-->
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBox></TextBox>
                <Button Grid.Column="1" Content="Search" Width="80"/>
            </Grid>

            <!--Add item: column 1-->
            <Button Grid.Column="1" Content="add expense" Width="100" Click="Button_Click"></Button>

            <!--Remove item: column 2-->
            <Button Grid.Column="2" Content="remove expense" Width="100"></Button>

            <!--Modify item: column 3-->
            <Button Grid.Column="3" Content="modify expense" Width="100"></Button>

            <!-- New category: columm 4 -->
            <Button Grid.Column="4" Content="New Category" Width="100" Click="addCategory"/>

            <!--Save: column 5-->
            <Button Grid.Column="5" Content="save" Width="100"></Button>
        </Grid>

        <!--Buffer Zone: row 9-->
        <TextBlock Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtStatusBar" FontWeight="Bold"/>
    </Grid>
</Window>
