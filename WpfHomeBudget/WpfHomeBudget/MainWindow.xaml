<Window x:Class="WpfHomeBudget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHomeBudget"
        mc:Ignorable="d"
        Width="900" Height="500"
        MinWidth="500" MinHeight="400"
        WindowState="Maximized"
        Style="{StaticResource WindowStyle}"
        Title="BudgetApplication" 
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Menu bar: row 0-->
        <Menu HorizontalContentAlignment="Right">
            <MenuItem x:Name="theme" Click="theme_Click">
                <MenuItem.Icon>
                    <Image x:Name="ThemeLogo" Source="images/DarkTheme.png"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

        <!-- Content: row 1-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- DB content: row 0-->
            <Grid Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="1*"/>
                    <RowDefinition  Height="10*"/>
                    <RowDefinition  Height="1*"/>
                </Grid.RowDefinitions>

                <!-- Title: row 0-->
                <Viewbox VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBlock Padding="2" Text="Expense" FontWeight="Bold"/>
                </Viewbox>

                <!-- Database view: row 1-->
                <DataGrid Grid.Row="1"  AutoGenerateColumns="True" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" />
                        <DataGridTextColumn Header="Date"/>
                        <DataGridTextColumn Header="Description"/>
                        <DataGridTextColumn Header="Amount"/>
                        <DataGridTextColumn Header="Category"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- options: row 2-->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!--Search bar: column 0-->
                    <Grid Margin="0, 5, 5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox/>
                        <Button Grid.Column="1" Content="Search" Padding="3"/>
                    </Grid>


                    <!--Add item: column 1-->
                    <Button Grid.Column="1" Content="add expense" Click="Button_Click" Margin="5"></Button>


                    <!--Remove item: column 2-->
                    <Button Grid.Column="2" Content="remove expense" Margin="5" ></Button>


                    <!--Modify item: column 3-->
                    <Button Grid.Column="3" Content="modify expense" Margin="5"></Button>


                    <!-- New category: columm 4 -->
                    <Button Grid.Column="4" Content="New Category" Margin="5" Click="addCategory"/>


                    <!--Save: column 5-->
                    <Button Grid.Column="5" Content="save" Margin="5,5,0,5"></Button>

                </Grid>

            </Grid>

            <!-- Status bar: row 1 -->
            <TextBlock x:Name="txtStatusBar" Grid.Row="1" Grid.ColumnSpan="2"/>
        </Grid>

    </Grid>
</Window>
